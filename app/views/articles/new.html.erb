<div id="page-content">
  <h1 class="text-center mt-4">Creating a new article</h1>

  <div class="container mt-4 justify-content-center">

    <%= render 'form' %>

    <div class="row justify-content-center">
      <div class="col-10">
        <%= form_with scope: :article, class: "shadow p-3 mb-3 bg-dark rounded", url: articles_path, data: { turbo: false } do |f| %>
          <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
            </div>
          </div>

          <div class="form-group row mt-3">
            <%= f.label :description, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
            </div>
          </div>

          <div class="form-group row justify-content-center mt-3 mx-1">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %> 
      </div>  
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-center text-dark" %>
    </div>
  </div>    
</div>